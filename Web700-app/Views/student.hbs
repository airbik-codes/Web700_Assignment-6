<div class="row">
  <main class="col-md-12">
    <br>
    <h2>{{viewData.student.firstName}} {{viewData.student.lastName}} - Student: {{viewData.student.studentNum}} <a href="/students/add" class="btn btn-success float-right">Add New Student</a></h2>
    <hr />
    <form method="post" action="/student/update">
      <input type="hidden" name="studentNum" value="{{viewData.student.studentNum}}" />
      <fieldset>
        <legend>Personal Information</legend>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label>First Name:</label>
              <input class="form-control" name="firstName" type="text" value="{{viewData.student.firstName}}" />
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label>Last Name:</label>
              <input class="form-control" name="lastName" type="text" value="{{viewData.student.lastName}}" />
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label>Email:</label>
              <input class="form-control" name="email" type="email" value="{{viewData.student.email}}" />
            </div>
          </div>
          <!-- Continue this pattern for the rest of the form fields -->
        </div>
      </fieldset>
      <hr />
      <input type="submit" class="btn btn-primary float-right" value="Update Student" />
      <br /><br /><br />
    </form>
  </main>
</div>
<div class="col-md-6">
  <div class="form-group">
    <label>Address (Street):</label>
    <input class="form-control" name="addressStreet" type="text" value="{{viewData.student.addressStreet}}" />
  </div>
</div>
<div class="col-md-6">
  <div class="form-group">
    <label>Address (City):</label>
    <input class="form-control" name="addressCity" type="text" value="{{viewData.student.addressCity}}" />
  </div>
</div>
<div class="col-md-6">
  <div class="form-group">
    <label>Address (Province):</label>
    <input class="form-control" name="addressProvince" type="text" value="{{viewData.student.addressProvince}}" />
  </div>
</div>
<div class="form-group">
  <label>TA:</label>
  <input class="form-check-input" name="TA" type="checkbox" {{#if viewData.student.TA}}checked{{/if}} />
</div>
<div class="form-group">
  <label>Status:</label>
  <div class="form-check">
    <input class="form-check-input" name="status" type="radio" value="Full Time" {{#equal viewData.student.status "Full Time"}}checked{{/equal}} />
    <label class="form-check-label">Full Time</label>
  </div>
  <div class="form-check">
    <input class="form-check-input" name="status" type="radio" value="Part Time" {{#equal viewData.student.status "Part Time"}}checked{{/equal}} />
    <label class="form-check-label">Part Time</label>
  </div>
</div>
{{#if viewData.courses}}
  <div class="form-group">
    <label for="course">Course:</label>
    <select class="form-control" name="course" id="course">
      <option value="">Select Course</option>
      {{#each viewData.courses}}
        <option value="{{this.courseId}}" {{#if this.selected}}selected{{/if}}>{{this.courseCode}}</option>
      {{/each}}
    </select>
  </div>
{{else}}
  <div>No Courses</div>
{{/if}}
