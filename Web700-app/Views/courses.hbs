<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Course Code</th>
        <th>Course Description</th>
        <th></th> <!-- New column for the remove link -->
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
      <tr>
        <td><a href="/course/{{this.courseId}}">{{this.courseCode}}</a></td>
        <td><a href="/students?course={{this.courseId}}">{{this.courseDescription}}</a></td>
        <td><a href="/course/delete/{{this.courseId}}" class="btn btn-danger">Remove</a></td> <!-- New remove link -->
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<div class="col-md-12 text-center">
  <strong>{{message}}</strong>
</div>
<a href="/courses/add" class="btn btn-success float-right">Add New Course</a>
